<section class="my-6 bg-slate-800 p-4 rounded text-white">
  <label for="focus" class="block mb-2 font-semibold">Choose your leadership focus:</label>
  <select id="focus" class="w-full p-2 rounded bg-slate-700 text-white" onchange="saveFocus(this)">
    <option value="Strategy">Strategy</option>
    <option value="Vision">Vision</option>
    <option value="AI">AI</option>
    <option value="Ethics">Ethics</option>
  </select>
  <script>
    function saveFocus(el) {
      localStorage.setItem('focusArea', el.value);
    }
    document.addEventListener('DOMContentLoaded', () => {
      const saved = localStorage.getItem('focusArea');
      if (saved) document.getElementById('focus').value = saved;
    });
  </script>
</section>
