---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section class="text-center py-10">
    <h1 class="text-3xl font-bold text-white">Subscribe to Daily Sparks</h1>
    <form action="https://formspree.io/f/{your-form-id}" method="POST" class="mt-4 space-y-4">
      <input type="email" name="email" placeholder="Your email" required class="px-4 py-2 w-full max-w-md rounded" />
      <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded">Subscribe</button>
    </form>
  </section>
</BaseLayout>
